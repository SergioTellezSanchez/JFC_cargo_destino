// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  phone     String?
  // licenseNumber String? // Removed in favor of Driver specific logic if needed, or keep? Keeping for now as it's user related.
  licenseNumber String?
  // vehicleType String? // Removed, now using Vehicle model
  latitude    Float?
  longitude   Float?
  role      String   @default("DRIVER") // ADMIN, DRIVER
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  deliveries Delivery[]
  
  // Relation to Vehicle (Driver can have one vehicle assigned, or many? Let's say one for now or just loose coupling)
  vehicleId String?
  vehicle   Vehicle? @relation(fields: [vehicleId], references: [id])
}

model Vehicle {
  id              String   @id @default(cuid())
  make            String
  model           String
  year            Int
  plate           String   @unique
  capacityVolume  Float?   // m3
  capacityWeight  Float?   // kg
  fuelType        String   // GASOLINE, DIESEL, ELECTRIC, HYBRID
  fuelPerformance Float?   // km/l
  fuelPrice       Float?   // per liter
  dailyDepreciation Float? // calculated value
  marketValue     Float?
  usefulLifeDays  Int?
  
  drivers         User[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Package {
  id            String   @id @default(cuid())
  trackingId    String   @unique
  recipientName String
  address       String
  postalCode    String
  latitude      Float?
  longitude     Float?
  weight        Float?
  size          String?  // SMALL, MEDIUM, LARGE - or dimensions? Keeping simple for now.
  instructions  String?
  leaveWithSecurity Boolean @default(false)
  
  // New fields
  // photos        String[] // SQLite doesn't support scalar lists
  photos        PackagePhoto[]
  declaredValue Float?
  insurance     Boolean @default(false)
  tolls         Float?
  advancePayment Float?
  isBackhaul    Boolean @default(false)
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  deliveries    Delivery[]
  
  // Storage relation
  storageId     String?
  storage       TemporaryStorage? @relation(fields: [storageId], references: [id])
  storageStatus String   @default("NONE") // NONE, REQUESTED, APPROVED, STORED, REJECTED
}

model PackagePhoto {
  id        String   @id @default(cuid())
  url       String
  
  packageId String
  package   Package @relation(fields: [packageId], references: [id])
  
  createdAt DateTime @default(now())
}

model Quotation {
  id            String   @id @default(cuid())
  origin        String
  destination   String
  distanceKm    Float?
  packageType   String   // BULTO, PALLET, CAJA, PZA, BOTE, MUEBLE
  isLTL         Boolean  @default(true) // Less Than Truckload
  vehicleType   String?  // CAMIONETA_CERRADA, REDILAS, CERRADA
  
  calculatedPrice Float
  
  createdAt     DateTime @default(now())
}

model TemporaryStorage {
  id          String   @id @default(cuid())
  location    String
  capacity    Float? // Total capacity
  currentLoad Float? // Current usage
  
  packages    Package[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Delivery {
  id        String   @id @default(cuid())
  status    String   @default("PENDING") // PENDING, ASSIGNED, PICKED_UP, IN_TRANSIT, DELIVERED, FAILED
  
  packageId String
  package   Package @relation(fields: [packageId], references: [id])
  
  driverId  String?
  driver    User?   @relation(fields: [driverId], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  evidenceUrl String?

  history   DeliveryHistory[]
}

model DeliveryHistory {
  id         String   @id @default(cuid())
  status     String
  timestamp  DateTime @default(now())
  
  deliveryId String
  delivery   Delivery @relation(fields: [deliveryId], references: [id])
}
